<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/check_box_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:minWidth="0dp"
        android:minHeight="0dp"/>

    <TextView
        android:id="@+id/task_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:layout_toStartOf="@id/priority_imageview"
        android:layout_alignTop="@id/check_box_complete"
        android:layout_alignBottom="@id/check_box_complete"
        android:layout_toEndOf="@id/check_box_complete"
        android:gravity="center_vertical"
        tools:text="sample text" />

    <ImageView
        android:id="@+id/priority_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_priority"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>